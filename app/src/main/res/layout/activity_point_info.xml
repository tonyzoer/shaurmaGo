<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="0.24"
        android:adjustViewBounds="true"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbarStyle="insideOverlay"
        android:layout_weight="0.76">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/desc"
                android:layout_width="395dp"
                android:layout_height="36dp"
                android:layout_weight="0.02"
                android:text="Имя  точки"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="Имя  точки"
                tools:layout_editor_absoluteY="136dp"
                tools:layout_editor_absoluteX="8dp" />

            <ListView
                android:id="@+id/commentsList"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.86"
                tools:layout_editor_absoluteY="172dp"
                tools:layout_editor_absoluteX="0dp" />
            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/left_comment_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:layout_weight="0.05"
                    android:text="Залиште свій коментар"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="431dp" />/>


                <EditText
                    android:id="@+id/comment_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/left_comment_header"
                    android:layout_margin="10dp"
                    android:hint="Ваш коментар"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="456dp" />



            <RatingBar
                android:id="@+id/new_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_edit"
                />

            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Відправити"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/comment_edit"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>