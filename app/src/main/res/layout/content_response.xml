<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_response_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.unicyb.shaurmago.activity.impl.ResponseActivity"
        tools:showIn="@layout/activity_response">

        <TextView
            android:id="@+id/content_response_left_response_text_view"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:text="@string/left_response"
            android:textAlignment="center"
            android:textSize="32sp"
            tools:layout_editor_absoluteX="8dp"

            tools:layout_editor_absoluteY="60dp" />

        <TextView
            android:id="@+id/content_response_taste_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_response_left_response_text_view"
            android:layout_marginTop="10dp"
            android:text="@string/taste"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="110dp" />

        <RatingBar
            android:id="@+id/content_response_taste_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_response_taste_text_view" />

        <View
            android:id="@+id/content_response_taste_rating_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/content_response_taste_rating_bar"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/content_response_texture_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_response_taste_rating_bar"
            android:layout_marginTop="10dp"
            android:text="@string/texture"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="110dp" />

        <RatingBar
            android:id="@+id/content_response_texture_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_response_texture_text_view" />

        <View
            android:id="@+id/content_response_texture_rating_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/content_response_texture_rating_bar"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/content_response_point_rate_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/content_response_texture_rating_bar"
            android:layout_marginTop="10dp"
            android:text="@string/point_rate"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="110dp" />

        <RatingBar
            android:id="@+id/content_response_point_rate_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_response_point_rate_text_view" />

        <View
            android:id="@+id/content_response_point_rate_rating_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/content_response_point_rate_rating_bar"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/content_response_image_preview_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/content_response_taste_text_view"
            android:layout_alignLeft="@+id/content_response_left_response_text_view"
            android:layout_alignRight="@+id/content_response_taste_text_view"
            android:layout_alignStart="@+id/content_response_left_response_text_view"
            android:layout_below="@+id/content_response_point_rate_rating_bar_divider"
            android:layout_marginTop="22dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/content_response_add_photo_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/content_response_left_response_text_view"
            android:layout_alignRight="@+id/content_response_left_response_text_view"
            android:layout_alignTop="@+id/content_response_image_preview_2"
            android:text="Додати фото" />

        <EditText
            android:id="@+id/content_response_coment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_response_add_photo_btn"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="коментар" />

        <TextView
            android:id="@+id/content_response_photo_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/content_response_coment_text"
            android:layout_toEndOf="@+id/content_response_texture_text_view"
            android:layout_toRightOf="@+id/content_response_texture_text_view"
            android:text="0"
            android:textSize="24sp" />

    </RelativeLayout>
</ScrollView>